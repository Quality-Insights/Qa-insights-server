{
  "name": "qa-insights-server",
  "version": "1.0.0",
  "description": "A test runner and reporter for the qa insights (LF Hackathon 2024)",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf dist lambda.zip;npx tsc;cp package.json ./dist/; cp package-lock.json ./dist/; cp -r node_modules ./dist/;mv dist/app.js dist/index.js;cd dist;zip -r ../lambda.zip .",
